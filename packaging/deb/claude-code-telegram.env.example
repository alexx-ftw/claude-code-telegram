# Required: Telegram bot credentials
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=

# Required: Telegram numeric user ID(s), comma-separated
ALLOWED_USERS=

# Required: directory Claude can access
APPROVED_DIRECTORY=/var/lib/claude-code-telegram/projects

# Storage
DATABASE_URL=sqlite:////var/lib/claude-code-telegram/claude_bot.db

# Recommended production defaults
DEBUG=false
DEVELOPMENT_MODE=false
AGENTIC_MODE=true
USE_SDK=true
